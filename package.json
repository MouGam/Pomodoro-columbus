{
  "name": "pomodoro-columbus",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "watch": "concurrently \"npm:watch-main\" \"npm:watch-renderer\"",
    "watch-main": "nodemon --watch main.js --exec electron .",
    "watch-renderer": "nodemon --watch renderer",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.pomodoro",
    "productName": "PomodoroTimer",
    "directories": {
      "output": "dist"
    },
  "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*",
          "!.DS_Store" 
        ]
      }
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "identity": null
    },
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "nodemon": "^3.1.9"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
